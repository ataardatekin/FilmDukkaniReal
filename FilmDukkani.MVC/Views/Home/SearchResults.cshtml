@model List<Movie>
@{
    ViewData["Title"] = "SearchResults";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Arama Sonuçları</h2>
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var movie in Model)
            {
                <div class="col-md-4 mb-4">

                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="~/images/Movie/@movie.PicturePath" class="img-fluid rounded-start" alt="@movie.MovieRealName">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@movie.MovieRealName</h5>
                                    <p class="card-text">@movie.Description</p>
                                    <a asp-action="Details" asp-controller="Home" asp-route-id="@movie.Id" class="btn btn-primary">Detaylar</a>
                                    <a asp-action="AddToCart" asp-controller="Home" asp-route-id="@movie.Id" class="btn btn-success">Listene Ekle</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            }
        }
        else
        {
            <div class="col-md-12">
                <p class="text-center">Sonuç bulunamadı.</p>
            </div>
        }
    </div>
</div>

