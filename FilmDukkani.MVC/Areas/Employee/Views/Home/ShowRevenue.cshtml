@model Dictionary<string, decimal>
@{
    ViewData["Title"] = "Gelir Raporu";
    Layout = "~/Areas/Employee/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <div class="row">
        <div class="col-md-6">
            <h4>Üyelik Türlerine Göre Gelirler</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Üyelik Türü</th>
                        <th>Aylık Gelir</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Key</td>
                            <td>@item.Value.ToString("C2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-6">
            <h4>Toplam Aylık Gelir</h4>
            <p>@ViewBag.TotalRevenueForAllMemberships.ToString("C2")</p>
        </div>
    </div>
</div>

