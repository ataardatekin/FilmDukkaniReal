@model List<Director>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Employee/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-between">
        <div class="row justify-content-between align-items-center">
            <h2 class="col-6">Yönetmen Listesi</h2>
            <a asp-action="Create" asp-controller="Director" asp-area="Employee" class="btn btn-success col-2">
                <i class="fa-solid fa-plus"></i> Yönetmen Ekle
            </a>

            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Yönetmen Adı</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var director in Model)
                    {
                        <tr>
                            <td>@director.Id</td>
                            <td>@director.DirectorName</td>
                            <td>

                                <a asp-action="Delete" asp-controller="Director" asp-area="Employee" asp-route-id="@director.Id" class="btn btn-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </a>

                                <a asp-action="Update" asp-controller="Director" asp-area="Employee" asp-route-id="@director.Id" class="btn btn-warning">

                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
